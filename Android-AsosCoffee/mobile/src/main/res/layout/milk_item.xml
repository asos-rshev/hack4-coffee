<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:gravity="center"
    android:layout_width="100dp"
    android:layout_height="100dp">

    <View
        android:id="@+id/itemMilkSelectedBg"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circular_selection" />

    <ImageView
        android:id="@+id/itemMilkIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:scaleType="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_latte_hero" />

    <TextView
        android:id="@+id/itemMilkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_below="@id/itemMilkIcon"
        android:layout_centerHorizontal="true"
        tools:text="Small"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:textAllCaps="true"/>
</RelativeLayout>