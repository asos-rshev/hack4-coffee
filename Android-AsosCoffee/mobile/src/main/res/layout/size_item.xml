<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:gravity="center"
    android:layout_width="100dp"
    android:layout_height="100dp">

    <View
        android:id="@+id/customiseSelectedBg"
        android:visibility="gone"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:background="@drawable/circular_selection" />

    <ImageView
        android:id="@+id/itemSizeIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:scaleType="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_latte_hero" />

    <TextView
        android:id="@+id/itemSizeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_below="@id/itemSizeIcon"
        android:layout_centerHorizontal="true"
        tools:text="Small"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:textAllCaps="true"/>
    <TextView
        android:id="@+id/itemSizePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:layout_below="@id/itemSizeTitle"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        tools:text="Â£1.5"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textAllCaps="true" />
</RelativeLayout>